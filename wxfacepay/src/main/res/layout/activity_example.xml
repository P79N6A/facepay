<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tencent.wxpay.imagefacesign.IFSExampleActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/val_mem_txt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:hint="会员手机号"/>

            <Button
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支付"
                android:textSize="25dp"
                android:textColor="#fff"
                android:background="@drawable/register_face_confirm_btn"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/start_faceId_once_recognize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="人脸识别Once模式"
                android:textSize="25dp"
                android:textColor="#fff"
                android:visibility="gone"
                android:background="@drawable/register_face_confirm_btn"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/facepay_delay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="非即时支付"
                android:textSize="25dp"
                android:textColor="#fff"
                android:visibility="gone"
                android:background="@drawable/register_face_confirm_btn"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/pay_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="未知状态"
                android:visibility="gone"
                android:gravity="center" />

            <TextView
                android:id="@+id/face_callback"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
